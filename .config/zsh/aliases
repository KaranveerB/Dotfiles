# {{{ polybar
function polyhook() { 
	if [ $# -eq 1 ]; then
		polybar-msg hook $1 1 > /dev/null 2>&1
	elif [ $# -eq 2 ]; then
		polybar-msg hook $1 $2 > /dev/null 2>&1
	else
		echo "Invalid number of arguments for polyhook()"
	fi
}
# }}}}

# pulseeffects
